{{#if addNewAnswer}}
    <h1>New Answer</h1>
    <div>
      <form>
       <div class="form-group">
         <label for="content">Content</label>
         {{input value=content id="content" placeholder=""}}
       </div>

       <div class="form-group">
         <label for="author">Author</label>
         {{input value=author id="author" placeholder=""}}
       </div>

       <button class="save-btn" {{action 'saveAnswer'}}>Save</button>
      </form>
    </div>
 {{else}}
    <button class="newanswer-btn" {{action 'answerFormShow'}}>New Answer</button>
{{/if}}
