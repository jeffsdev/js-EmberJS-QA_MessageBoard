{{#if addNewQuestion}}
<div class="q-form">
    <!-- <h2>Ask A Question</h2> -->
      <form>
       <div class="form-group">
         <label for="content">Question: </label><br>
         {{input value=content id="content"}}
       </div>

       <div class="form-group">
         <label for="author">Username: </label><br>
         {{input value=author id="author"}}
       </div>

       <div class="form-group">
         <label for="notes">Notes: </label><br>
         {{input value=notes id="notes"}}
       </div>

       <button {{action 'saveQuestion'}}>Submit</button>
     </form>
    </div>
 {{else}}
    <button class="ask-question-btn" {{action 'questionFormShow'}}>Ask A Question</button>
{{/if}}
