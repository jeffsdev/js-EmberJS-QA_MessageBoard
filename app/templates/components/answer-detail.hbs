


<div class="answers">
  <h2>Answers</h2>
  {{new-answer question=model saveAnswer="saveAnswer"}}
  <ul>
    {{#each sortedAnswers as |answer|}}
      <li class="answer-block">
        <div class="answer-meta">
          <h4>{{answer.author}}</h4>
          <p>Upvotes: {{answer.vote}}</p>
          <button class="uvote" {{action 'upvote' answer}}></button>
          <button class="dvote" {{action 'downvote' answer}}></button>
        </div>
        <div class="answer-content">
          <p>{{answer.content}}</p>
        </div>
      </li>
    {{/each}}
  </ul>
</div>
